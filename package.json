{
  "name": "personal-website",
  "version": "0.0.1",
  "description": "personal website",
  "main": "dist/main.js",
  "scripts": {
    "start": "TS_NODE_PROJECT=config/typescript/tsconfig.node.json ts-node -r tsconfig-paths/register ./server/Server.ts",
    "types:sass": "rm -rf **/*.scss.d.ts && tsm src --camelCase",
    "types:sass:watch": "npm run types:sass -- --watch",
    "dev": "npm run types:sass:watch | npm run start",
    "build": "rm -rf dist && npm run types:sass && sh ./scripts/build.sh",
    "build:analyze": "npm run build -- --analyze",
    "lint:ts": "tslint --project tsconfig.json -c './config/tslint/tslint.json' '**/*.{ts,tsx}' --exclude './**/*.d.ts'",
    "lint:ts:fix": "npm run lint:ts -- --fix",
    "prettier": "prettier --config ./config/prettier/.prettierrc --write '**/*.{ts,tsx,css}'",
    "prettier:check": "prettier --config ./config/prettier/.prettierrc  --list-different '**/*.{ts,tsx,css}' --ignore-path ./config/prettier/.prettierignore"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint:ts && npm run prettier:check"
    }
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "^5.0.0",
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/node": "^12.0.0",
    "@types/node-sass": "^4.11.0",
    "@types/react": "^16.8.16",
    "@types/react-dom": "^16.8.4",
    "@types/webpack": "^4.4.31",
    "@types/webpack-bundle-analyzer": "^2.13.1",
    "body-parser": "^1.19.0",
    "copy-webpack-plugin": "^5.0.3",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.2.0",
    "morgan": "^1.9.1",
    "node-sass": "^4.12.0",
    "prettier": "^1.17.0",
    "prismjs": "^1.17.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "sass-loader": "^8.0.0",
    "style-loader": "^0.23.1",
    "ts-loader": "^4.4.1",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.16.0",
    "tslint-eslint-rules": "^5.4.0",
    "typed-scss-modules": "0.0.12",
    "typescript": "^3.1.3",
    "webpack": "^4.6.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-middleware": "^3.7.0",
    "webpack-dev-server": "^3.3.1",
    "webpack-hot-middleware": "^2.25.0"
  },
  "dependencies": {
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "rxjs": "^6.5.2"
  }
}
